    "@sanity/image-url": "^1.0.2",
    "@sanity/preview-kit": "^1.3.4",
    "@sanity/vision": "^3.5.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "groq": "^3.5.0",
    "lucide-react": "^0.115.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
