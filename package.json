    "@sanity/asset-utils": "^1.3.0",
    "@sanity/demo": "^1.0.1",
    "@sanity/image-url": "^1.0.1",
    "@sanity/preview-kit": "^1.2.10",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "groq": "^2.33.2",
    "lucide-react": "^0.104.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^4.1.0",
    "sanity": "^3.0.0",
