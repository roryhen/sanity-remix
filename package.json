    "inquirer": "^9.1.4",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.2.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4"
